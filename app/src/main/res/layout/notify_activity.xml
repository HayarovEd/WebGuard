<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" >

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="5dp"
              android:layout_marginRight="5dp"
              android:layout_marginBottom="7dp"
              android:layout_marginTop="7dp"
              style="@android:style/TextAppearance.Theme.Dialog"
              android:id="@+id/dialog_text"
              android:text="@string/malware_site_blocked" />

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal" >

        <Button android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/report_error"
                android:onClick="onErrorClick" />

        <Button android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@android:string/ok"
                android:onClick="onOkayClick" />

    </LinearLayout>

</LinearLayout>
