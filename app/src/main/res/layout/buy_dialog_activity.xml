<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:minHeight="200dp"
              tools:context="app.ui.BuyDialogActivity" >

    <ScrollView android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" >

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="5dp"
                  android:layout_marginRight="5dp"
                  android:layout_marginBottom="7dp"
                  android:layout_marginTop="7dp"
                  android:paddingBottom="5dp"
                  style="@android:style/TextAppearance.Theme.Dialog"
                  android:id="@+id/dialog_text"
                  android:text="@string/buy_text" />

    </ScrollView>

    <Button android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/first_button"
            android:text="@android:string/ok"
            android:onClick="onFirstClick" />

    <Button android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/second_button"
            android:visibility="gone"
            android:text="@android:string/ok"
            android:onClick="onSecondClick" />

    <Button android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/third_button"
            android:visibility="gone"
            android:text="@android:string/ok"
            android:onClick="onThirdClick" />

    <Button android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tryfree_button"
            android:visibility="gone"
            android:text="@string/tryfree"
            android:onClick="onFreeClick" />

    <Button android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ok_button"
            android:visibility="gone"
            android:text="@android:string/ok"
            android:onClick="onOkClick" />

</LinearLayout>
